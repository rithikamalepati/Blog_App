<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Home</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>Blog Posts</h1>
        <a href="/blog/new" class="create-post">Create New Post</a>
        <ul>
            <% posts.forEach((post, index) => { %>
                <li>
                    <h2><%= post.title %></h2>
                    <p><%= post.content %></p>
                    <a href="/blog/edit/<%= index %>">Edit</a>
                    <form action="/blog/delete/<%= index %>" method="POST">
                        <button type="submit">Delete</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    </div>
</body>
</html>
